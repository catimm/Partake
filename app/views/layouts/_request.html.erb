<%= form_for @request, url: {action: "create"}, html: {class: "request"} do |f| %>
  <%= f.text_field :name, class: "inputField", placeholder: "Your name" %>
  <%= f.email_field :email, class: "inputField", placeholder: "Email address" %>
  <%= f.hidden_field :city %>
  <%= f.hidden_field :state %>
  <%= f.hidden_field :zip %>
  <%= f.submit "Request an invite", class: "registerButton" %>
<% end %>

