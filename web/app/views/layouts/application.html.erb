<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=true"></script> 
<script type="text/javascript"> 
    $(document).ready(function() {
       var geocoder;

      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(successFunction, errorFunction);
      } 
      //Get the latitude and the longitude;
      function successFunction(position) {
        var lat = position.coords.latitude;
        var lng = position.coords.longitude;
        geocoder = new google.maps.Geocoder();
        codeLatLng(lat, lng);
        
      }

      function errorFunction(){
        console.log("Geocoder failed");
      }

        function codeLatLng(lat, lng) {

        var latlng = new google.maps.LatLng(lat, lng);
        geocoder.geocode({'location': latlng}, function(results, status) {
          if (status == google.maps.GeocoderStatus.OK) {
          console.log(results);
          if (results[1]) {
           //address components
           zip = results[5].address_components[0].long_name;
           city = results[5].address_components[1].long_name;
           state = results[5].address_components[3].long_name;
           
           //fill inputs with location data
           if (city == "") {
           	document.getElementById("request_city").setAttribute("value", "NA");
           } else {
           	document.getElementById("request_city").setAttribute("value", city);
           }
           if (state == "") {
           	document.getElementById("request_state").setAttribute("value", "NA");
           } else {
           	document.getElementById("request_state").setAttribute("value", state);
           }
           if (zip == "") {
           	document.getElementById("request_zip").setAttribute("value", "NA");
           } else {
           	document.getElementById("request_zip").setAttribute("value", zip);
           }
           
          } else {
            console.log("No results found");
          }
          } else {
          console.log("Geocoder failed due to: " + status);
          }
        });
        }
    }); 
</script>
